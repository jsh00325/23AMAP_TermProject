<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManagement.SignUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        app:contentInsetStart="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="회원 가입"
            android:textColor="@color/black_191919"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        android:weightSum="1455"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:textColor="@color/black_191919"
            android:text="이메일(아이디)"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="691">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="561"
                android:textSize="14sp"
                android:fontFamily="@font/notosanskr_medium"
                android:hint="아이디만 입력"
                android:includeFontPadding="false"
                android:inputType="textEmailAddress"
                android:textColor="@color/black_191919" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10" />

            <Button
                android:id="@+id/authNumButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="120"
                android:padding="5dp"
                android:autoSizeMaxTextSize="100dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeStepGranularity="1dp"
                android:autoSizeTextType="uniform"
                android:background="@color/buttonTheme"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="인증 받기"
                android:textColor="@color/maintheme" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:orientation="horizontal"
            android:weightSum="690">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="370"
                android:maxLines="1"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="경북대 웹메일로 인증 코드가 전송됩니다."
                android:textColor="@color/maintheme"
                android:autoSizeMaxTextSize="100dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeStepGranularity="1dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/websitemoveTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="200"
                android:maxLines="1"
                android:autoSizeMaxTextSize="100dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeStepGranularity="1dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="경북대 웹메일 이동하기"
                android:textColor="@color/black_191919"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:padding="5dp"
                android:src="@drawable/next_btn" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />

        <TextView
            android:id="@+id/authnumTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="인증 번호"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:textColor="@color/black_191919" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <EditText
            android:id="@+id/authNumEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:fontFamily="@font/notosanskr_medium"
            android:hint="인증 코드"
            android:includeFontPadding="false"
            android:inputType="number"
            android:textColor="@color/black_191919"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="46" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="비밀 번호"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:textColor="@color/black_191919" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:fontFamily="@font/notosanskr_medium"
            android:hint="비밀번호는 6자리 이상 입력해주세요"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:textColor="@color/black_191919"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="비밀 번호 확인"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="100dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeStepGranularity="1dp"
            android:textColor="@color/black_191919" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <EditText
            android:id="@+id/passwordcheckEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:fontFamily="@font/notosanskr_medium"
            android:hint="비밀번호를 확인해주세요"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:textColor="@color/black_191919"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="480" />

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88"
            android:background="@drawable/rectangular_background_button"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="다음"
            android:textColor="@color/maintheme"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100" />

    </LinearLayout>


</RelativeLayout>